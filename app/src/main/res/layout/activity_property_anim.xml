<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8aba6"
    android:orientation="vertical"
    tools:context="com.example.maqingwei.animationday01.PropertyAnimActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:text="Property :"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ptranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平移"/>
        <Button
            android:id="@+id/protate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转"/>
        <Button
            android:id="@+id/pscale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放"/>
        <Button
            android:id="@+id/palpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="透明"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/combine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组合"/>
        <Button
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色渐变"/>
        <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"/>
        <Button
            android:id="@+id/delbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"/>
    </LinearLayout>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bb"
        android:id="@+id/propertyimg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:id="@+id/llgropu"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"></LinearLayout>

</LinearLayout>
